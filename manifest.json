{

  "manifest_version": 2,
  "name": "Add HTTPS",
  "version": "1.0",
  
  "description": "Toggle http(s) on current tab url with a single click",
  "homepage_url": "https://github.com/sanspace/add-https",
  
  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": "icons/padlock_green.svg",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "tabs"
  ]

}
